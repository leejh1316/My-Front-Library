{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "ES6"],
    "outDir": "build",
    "skipLibCheck": true,
    "preserveValueImports": false,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "noEmit": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "strictNullChecks": false,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@/*" : ["./src/*"],
      "@/lib/*" : ["./src/lib/*"],
      "@/lib" : ["./src/lib"],
      "@components/*" : ["./src/components/*"],
      "@components" : ["./src/components"],
      "@feature/*" : ["./src/feature/*"],
      "@feature" : ["./src/feature"],
      "@model/*" : ["./src/model/*"],
      "@model" : ["./src/model"],
      "@api/*" : ["./src/api/*"],
      "@api" : ["./src/api"],
      "@data/*" : ["./src/data/*"],
      "@data" : ["./src/data"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/lib/popup/index.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
